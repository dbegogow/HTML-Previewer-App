@page
@model RegisterModel

@{
    ViewBag.Title = "Register";
}

@section IdentityFormStyles {
    <link href="~/css/identity/form.css" rel="stylesheet" />
}

<div class="form-container">
    <h2>Register</h2>
    <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <div class="validation-summary">
            <ul>
                @foreach (var error in ModelState.ModelStateErrorMessages())
                {
                    <li>@error</li>
                }
            </ul>
        </div>

        <div>
            <i class="fas fa-user"></i>
            <input asp-for="Input.Email" placeholder="Email" />
        </div>
        <span asp-validation-for="Input.Email" class="validation-message"></span>
        <div>
            <i class="fas fa-lock"></i>
            <input asp-for="Input.Password" placeholder="Password" />
        </div>
        <span asp-validation-for="Input.Password" class="validation-message"></span>
        <div>
            <i class="fas fa-lock"></i>
            <input asp-for="Input.ConfirmPassword" placeholder="Confirm Password" />
        </div>
        <span asp-validation-for="Input.ConfirmPassword" class="validation-message"></span>
        <button type="submit">Sign in</button>
    </form>
</div>

@section ValidationScript {
    <partial name="_ValidationScriptsPartial" />
}
@model SampleFormModel

@{
    ViewBag.Title = "Render your HTML code";
}

@section IndexStyles {
    <link href="~/css/home/index.css" rel="stylesheet" />
}

<div class="home-page-container">
    <h1 class="heading">HTML Previewer</h1>

    <form method="post" asp-controller="Samples" asp-action="@(Model == null ? "Save" : "Edit")">
        <div class="previewer-container">
            <div class="input-sample-container">
                <input asp-for="Id" id="sample-id" class="hide" />

                <label asp-for="Code">Write your code here:</label>
                <textarea asp-for="Code" id="code"></textarea>
            </div>
            <div class="result-container">
                <p>Result:</p>
                <div id="result" class="result">
                    @Html.Raw(Model?.Code)
                </div>
            </div>
        </div>

        <input class="btn first" type="submit" value="@(Model == null ? "Save Code" : "Edit Code")" />

        @if (Model != null)
        {
            <span id="check-button" type="button" class="btn">Check original</span>
        }
    </form>
</div>

@section IndexScript {
    <script type="text/javascript" src="~/js/samples/render.js"></script>
    <script type="text/javascript" src="~/js/samples/checkOriginal.js"></script>
}